<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Letsplant" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/green_2</item>
        <item name="colorPrimaryVariant">@color/green_2</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/green_2</item>
        <item name="colorSecondaryVariant">@color/green_2</item>
        <item name="colorOnSecondary">@color/white</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">@color/green_1</item>
        <!-- Customize your theme here. -->
        <item name="android:preferenceStyle">@style/PreferenceTheme</item>
    </style>

    <style name="Theme.Letsplant.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.Letsplant.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.Letsplant.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="PreferenceTheme" parent="@style/Preference.PreferenceScreen">
        <item name="preferenceTheme">@style/PreferenceThemeOverlay</item>
        <item name="android:background">@color/gray_1</item>
    </style>
</resources>