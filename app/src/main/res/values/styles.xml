<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!--    Text Styles-->
    <style name="small_title_style">
        <item name="android:textAllCaps">true</item>
        <item name="android:textColor">@color/green_3</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="big_title_style">
        <item name="android:textColor">@color/green_3</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="ShapeAppearanceOverlay.App.CornerSize50Percent" parent="">
        <item name="cornerSizeBottomRight">30%</item>
        <item name="cornerFamily">rounded</item>
    </style>

    <style name="tv_error_style">
        <item name="android:textColor">@color/red_1</item>
        <item name="android:textSize">18sp</item>
<!--        <item name="android:textStyle">bold</item>-->
    </style>

</resources>