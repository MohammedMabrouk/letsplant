<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:id="@+id/ll_info_item"
    android:layout_marginTop="@dimen/margin_8"
    android:layout_marginBottom="@dimen/margin_8"
    android:padding="@dimen/padding_8"
    android:background="@drawable/round_white_bg_with_border">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="@dimen/padding_8"
        android:gravity="center_vertical">
        <ImageView
            android:id="@+id/iv_img"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/ic_outline_info"
            app:tint="@color/green_2"
            android:layout_marginEnd="@dimen/margin_8"/>
        <TextView
            android:id="@+id/tv_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Plant Overview"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="@color/green_3"/>
    </LinearLayout>
    <TextView
        android:id="@+id/tv_info"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingStart="@dimen/padding_8"
        android:paddingEnd="@dimen/padding_8"
        android:text="This plant is very good. it has many advantages, you can keep it easily."
        android:textSize="14sp"
        android:textColor="@color/green_3"/>
</LinearLayout>